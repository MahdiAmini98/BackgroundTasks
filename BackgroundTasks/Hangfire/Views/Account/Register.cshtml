@model Hangfire.Models.ViewModels.UserRegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <form asp-action="Register" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FirstName" class="control-lable"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="LastName" class="control-lable"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Email" class="control-lable"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Password" class="control-lable"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-lable"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-lable"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group mt-4">
            <input type="submit" value="CreateRegister" class="btn btn-success"/>
        </div>
    </form>
</div>